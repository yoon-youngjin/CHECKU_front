<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NodeProject2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:textViewStyle">@style/scdreamTextView</item>
        <item name="android:buttonStyle">@style/scdreamButton</item>
    </style>

    <style name="scdreamTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/scdream5</item>
    </style>

    <style name="scdreamButton" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/scdream5</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/scdream5</item>
        <item name="android:textSize">16dp</item>
    </style>

</resources>