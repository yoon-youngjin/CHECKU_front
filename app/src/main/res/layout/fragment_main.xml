<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"

        android:layout_width="match_parent">

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<!--        <TextView-->
<!--                android:id="@+id/tv"-->
<!--                android:textColor="@color/black"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginRight="10dp"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:padding="5dp"-->
<!--                android:textSize="15dp"/>-->


        <Spinner
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="40dp"
                android:id="@+id/spinner"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="강의목록"
                    android:textColor="@color/kukie_green"/>



            <LinearLayout
                    android:id="@+id/clicklayout"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center">
                <ImageView
                        android:id="@+id/tooltipbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/ic_tooltip"/>
            </LinearLayout>

            <View android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_weight="1"/>

<!--            <com.skydoves.elasticviews.ElasticCheckButton-->
<!--                    android:id="@+id/toggleButton"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="32dp"-->
<!--                    android:layout_weight="0.5"-->
<!--                    android:layout_margin="5dp"-->
<!--                    android:text="빈 강의"-->
<!--                    android:background="@color/kukie_green"-->
<!--                    android:textColor="@color/white"-->
<!--                    app:checkButton_cornerRadius="12dp"-->
<!--                    app:checkButton_alpha="0.7"-->
<!--                    app:checkButton_duration="400"-->
<!--                    app:checkButton_scale="0.9" />-->

            <ToggleButton
                    android:text="ToggleButton"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="0.5"
                    android:layout_margin="10dp"
                    android:textOn="빈 강의"
                    android:textOff="빈 강의"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:id="@+id/toggleButton"/>


        </LinearLayout>




        <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

            <RadioButton
                    android:text="전체"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:layout_margin="5dp"
                    android:button="@null"
                    android:checked="true"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/radioButton1"/>
            <RadioButton
                    android:text="1학년"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:button="@null"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/radioButton2"/>
            <RadioButton
                    android:text="2학년"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:button="@null"
                    android:layout_margin="5dp"

                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/radioButton3"/>
            <RadioButton
                    android:text="3학년"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:button="@null"
                    android:layout_margin="5dp"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/radioButton4"/>
            <RadioButton
                    android:text="4학년"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:textAlignment="center"
                    android:button="@null"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/radioButton5"/>

        </RadioGroup>

        <RadioGroup
                android:id="@+id/typeRadioGroup"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <RadioButton
                    android:text="전체"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:textAlignment="center"
                   android:layout_margin="5dp"
                    android:button="@null"
                    android:checked="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/typeRadioButton1"/>
            <RadioButton
                    android:text="전필"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:textAlignment="center"
                    android:button="@null"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/typeRadioButton2"/>
            <RadioButton
                    android:text="전선"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:textAlignment="center"
                    android:button="@null"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/typeRadioButton3"/>
            <RadioButton
                    android:text="기타"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:textAlignment="center"
                    android:button="@null"
                   android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/typeRadioButton4"/>
            <View android:layout_width="0dp" android:layout_height="0dp"
                  android:layout_weight="1"/>

        </RadioGroup>



        <EditText
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="40dp"
                android:id="@+id/findlecture_edittext"
                android:theme="@style/scdreamEditText"
                android:inputType="text"
                android:textSize="15dp"
                android:hint="아래 목록 중 원하는 과목을 찾아보세요"

                android:padding="10dp"
                android:background="@drawable/border"/>


        <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/main_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/viewitem"/>

    </LinearLayout>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
